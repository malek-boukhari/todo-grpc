{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./build/",
    "removeComments": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "esModuleInterop": true,
  },
  "exclude": ["node_modules"],
  "include": [
    "src",
    "tests"
  ]
}
